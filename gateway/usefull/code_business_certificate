<script type="text/javascript"><!--
    var director_row = <?php echo $director_row; ?>;

    function addDirector() {
        html  = '<div class="tab-pane" id="tab-director' + director_row + '">';
        html += '  <p>'+director_row+'</p>';
        html += '</div>';

        $('#tab-director .tab-content').prepend(html);

        $('#director-add').before('<li><a href="#tab-director' + director_row + '" data-toggle="tab"><i class="fa fa-minus-circle" onclick="$(\'#director a:first\').tab(\'show\'); $(\'a[href=\\\'#tab-director' + director_row + '\\\']\').parent().remove(); $(\'#tab-director' + director_row + '\').remove();"></i> Director #' + director_row + '</a></li>');

        $('#director a[href=\'#tab-director' + director_row + '\']').tab('show');

        director_row++;
    }
    //--></script>